<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>null</groupId>
  <artifactId>null</artifactId>
  <version>0</version>

  <properties>
    <flies.srcDir>.</flies.srcDir>
  </properties>
 
  <build>
    <plugins>
      <plugin>
        <groupId>net.openl10n.flies</groupId>
        <artifactId>flies-maven-plugin</artifactId>
        <version>1.2-SNAPSHOT</version>
        <configuration>
<!-- for instance 
          <importPo>false</importPo>
-->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <pluginRepositories>
