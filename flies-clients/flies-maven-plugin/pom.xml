<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>flies-clients</artifactId>
    <groupId>net.openl10n.flies</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>flies-maven-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <name>flies-maven-plugin Maven Mojo</name>
  
  <!-- 
  NB: This description will be extracted by maven-plugin-plugin, 
  put into the plugin descriptor, and used in the auto-generated 'help' 
  goal). 
  -->
  <description>
    Flies REST API client for managing Flies projects, publishing 
    source text and retrieving translations.
  </description>
  
  <url>http://flies.googlecode.com/</url>
  
  <dependencies>
    <dependency>
        <groupId>net.openl10n.flies</groupId>
        <artifactId>flies-client-commands</artifactId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-log4j12</artifactId>
        <scope>runtime</scope>
    </dependency>
	<dependency>
	    <groupId>com.pyx4j</groupId>
	    <artifactId>maven-plugin-log4j</artifactId>
	</dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-plugin-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <!-- Tell maven-plugin-plugin to generate the 'help' goal -->
          <execution>
            <id>generated-helpmojo</id>
            <goals>
              <goal>helpmojo</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
			<!-- Use only java mojo extractor -->
			<extractors>
			    <extractor>java</extractor>
			</extractors>
        </configuration>
      </plugin>
      
      <!-- This is just to tell Maven about our plugin prefix: -->
<!--  But Maven 3 won't like it without a version... 
      <plugin>
        <groupId>net.openl10n.flies</groupId>
        <artifactId>flies-maven-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
      </plugin>
 -->
    </plugins>
  </build>
</project>
