<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type="net.openl10n.flies.webtrans.client.Resources"/>

	<ui:style>
		.toolbar{
			 background: #99ccff;
			 text-align: center;
			 font-style: italic;
			 font-weight: bold;
			 display: block;
			 text-decoration: none;
		}

		.userList {
			width: 100%;
			height: 100%;
			overflow-y: auto;
			overflow-x: hidden;
			background: #F5F8FF;
		}
		
		.headerLabel{
			 background: #99ccff;
			 text-align: center;
			 font-style: italic;
			 font-weight: bold;
			 display: block;
		}
		
	</ui:style>

	<g:LayoutPanel ui:field="userPanel">
		<g:layer top='0px' height='20px'>
			<g:Label ui:field="headerLabel" styleName="{style.headerLabel}"/>
		</g:layer>
		<g:layer top='20px' bottom='0px'>
			<g:LayoutPanel>
				<g:layer>
					<g:FlowPanel ui:field='userListPanel'  styleName='{style.userList}'>
					</g:FlowPanel>
				</g:layer>
				<!-- Could add a toolbar and chat entry window below here -->
			</g:LayoutPanel>
		</g:layer>
	</g:LayoutPanel>
	
	
</ui:UiBinder> 