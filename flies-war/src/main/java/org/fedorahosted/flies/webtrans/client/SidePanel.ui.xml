<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.fedorahosted.flies.webtrans.client">

	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>

	<ui:style>
		.sidePanel {
			background-color: #F5F8FF;
			border: 2px solid #99ccff;
			-moz-border-radius: 7px;
			-webkit-border-radius: 7px;
		}
		
	</ui:style>
	
	<g:LayoutPanel styleName="{style.sidePanel}">
		<g:layer left='25%' right='25%' top='4px' height='10em'>
			<g:Label>Hello world</g:Label>
		</g:layer>
		
		<g:layer bottom='20px' height='200px'>
			<g:LayoutPanel ui:field='filterPanelContainer' />
		</g:layer>
		
		<g:layer bottom='0px' height='20px'>
			<g:LayoutPanel ui:field="usersPanelContainer">
				<g:layer>
					<f:WorkspaceUsersView ui:field="workspaceUsersView"/>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
	</g:LayoutPanel>
	
</ui:UiBinder> 