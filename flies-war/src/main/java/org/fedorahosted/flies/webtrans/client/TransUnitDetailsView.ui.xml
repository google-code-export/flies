<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:fui="urn:import:org.fedorahosted.flies.webtrans.client.ui">
	<ui:style>
		.tuDetailsInactive {
			border: 2px dotted grey;
			padding: 5px;
			text-align: center;
			display:table-cell; 
			vertical-align:middle;
			color: grey;
			}
	</ui:style>
	<fui:CollapsePanel ui:field="collapsePanel">
		<g:LayoutPanel ui:field="rootPanel">
			<g:layer top="5px" bottom="5px" left="5px" right="5px">
				<g:Label styleName="{style.tuDetailsInactive}" ui:field="noDetailsLabel">
					Select a Translation Unit to view details.
				</g:Label>
			</g:layer>
			<g:layer top="0px" height="0px">
				<g:Label ui:field="sourceCommentsLabel">
				</g:Label>
			</g:layer>
		</g:LayoutPanel>
	</fui:CollapsePanel>
</ui:UiBinder> 