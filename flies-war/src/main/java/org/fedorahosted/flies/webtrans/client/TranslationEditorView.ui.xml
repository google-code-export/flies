<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.fedorahosted.flies.webtrans.client"
	xmlns:fui="urn:import:org.fedorahosted.flies.webtrans.client.ui">
	<ui:style>
		.tmview{
			padding-left: 7px;
			padding-bottom: 7px;
			background-color: #F5F8FF;
			border: 2px solid #99ccff;
			-moz-border-radius-topleft: 7px;
			-webkit-border-top-left-radius: 7px;
			-moz-border-radius-topright: 7px;
			-webkit-border-top-right-radius: 7px;
		}
		
		.unitStatus {
			float: right;
			width: 100px;
			height: 1.2em;
		}
		
		.centerText{
			text-align: center;
		}
		
	</ui:style>
	<g:SplitLayoutPanel ui:field="splitPanel" styleName="PageSplitLayoutPanel" >
		<g:center>
			<g:LayoutPanel>
				<g:layer top='0px' height='1.3em' right="0px" width="100px">
					<f:TransUnitCountBar ui:field='transUnitCountBar' styleName="{style.unitStatus}"/>
				</g:layer>
				<g:layer top="0px" height="1.3em" right="100px" left="100px">
					<g:FlowPanel ui:field="transUnitNavigationContainer" styleName="{style.centerText}"/>
				</g:layer>
				<g:layer top="1.3em" bottom="2em">
					<g:LayoutPanel ui:field="editor" />
				</g:layer>
				<g:layer bottom="0px" height="2em">
					<g:FlowPanel styleName="{style.centerText}">
						<fui:Pager ui:field="pager" />
					</g:FlowPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:center>
		<g:south size="150" min-size="100">
			<g:FlowPanel styleName="{style.tmview}" ui:field="tmPanel">
				<g:Label>TM view</g:Label>
			</g:FlowPanel>
		</g:south>
	</g:SplitLayoutPanel>
</ui:UiBinder> 