<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>

	<ui:style>
		.toolbar{
			 background: #99ccff;
			 text-align: center;
			 font-style: italic;
			 font-weight: bold;
			 display: block;
			 text-decoration: none;
		}

		.userList {
			width: 100%;
			height: 100%;
			overflow-y: auto;
			overflow-x: hidden;
		}
		
	</ui:style>
	
	<g:LayoutPanel>
		<g:layer>
			<g:FlowPanel ui:field='userListPanel'  styleName='{style.userList}'>
			</g:FlowPanel>
		</g:layer>
		<!-- Could add a toolbar and chat entry window below here -->
	</g:LayoutPanel>
	
</ui:UiBinder> 