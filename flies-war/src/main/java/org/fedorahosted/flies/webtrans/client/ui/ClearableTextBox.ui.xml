<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>
	
	<ui:style type="org.fedorahosted.flies.webtrans.client.ui.ClearableTextBox.Styles">
		.flow {
			vertical-align: middle;
			}
		.label{
			display: inline;
		}
		
		.emptyBox {
			color: #ddd;
			font-style: italic;
		}
	</ui:style>
	
	<g:FlowPanel styleName="{style.flow}">
		<g:TextBox ui:field="textBox" />
		<g:Image ui:field="xButton" resource="{resources.xButton}" />
	</g:FlowPanel>
</ui:UiBinder> 