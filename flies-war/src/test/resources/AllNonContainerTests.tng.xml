<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Flies JPA and REST Tests" verbose="1">

	<listeners>
		<!-- 
			   This ensures that ungrouped tests are treated as unit-tests: 
		-->
		<listener class-name="net.openl10n.flies.testing.UnitTestTransformer"/>
	</listeners>

	<test name="Non-Seam Tests">
 		<groups>
	 		<packages>
	 			<package name="net.openl10n.flies.*"/>
	 		</packages>
 			<run>
 				<include name=".*"/>
 				<exclude name="seam-tests"/>
 			</run>
 		</groups>
	</test>

</suite>
