<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Flies Unit Tests" verbose="1">

	<listeners>
		<!-- 
			   This ensures that ungrouped tests are treated as unit-tests: 
		-->
		<listener class-name="net.openl10n.flies.testing.UnitTestTransformer"/>
	</listeners>

	<test name="Unit Tests">
 		<groups>
		<!-- 
	 		<packages>
	 			<package name="net.openl10n.flies.*"/>
	 		</packages>
		-->
 			<run>
 				<include name="unit-tests"/>
 			</run>
 		</groups>
	</test>

</suite>
